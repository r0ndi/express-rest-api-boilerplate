{
  "name": "express-rest-api-boilerplate",
  "version": "1.0.0",
  "description": "Project with boilerplate REST API based on express.js & TS",
  "author": "sadelkonrad@gmail.com",
  "license": "MIT",
  "main": "src/server.js",
  "keywords": [
    "express.js",
    "typescript",
    "node.js"
  ],
  "scripts": {
    "dev": "export NODE_ENV=development && npm run",
    "start": "node dist/server.js",
    "start-watch": "nodemon dist/server.js",
    "build": "./node_modules/typescript/bin/tsc",
    "build-watch": "./node_modules/typescript/bin/tsc -w",
    "lint": "./node_modules/tslint/bin/tslint -p tsconfig.json -c tslint.json",
    "typeorm:cli": "node ./node_modules/typeorm/cli -f ./dist/configs/orm.config.js",
    "test": "export NODE_ENV=test && jest --silent"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.4.17",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node-cron": "^2.0.3",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.10",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "nodemon": "^1.18.4",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test && npm run build --noEmit"
    }
  }
}
